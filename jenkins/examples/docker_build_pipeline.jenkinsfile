// Docker-agent example for reproducible builds
pipeline {
  agent {
    docker {
      image 'node:18-alpine'
      args  '--network host'
    }
  }
  stages {
    stage('Prepare') {
      steps {
        sh 'node -v && npm -v'
      }
    }
    stage('Build') {
      steps {
        sh 'npm ci && npm run build'
      }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
      post {
        always { junit 'reports/**/*.xml' }
      }
    }
  }
}
